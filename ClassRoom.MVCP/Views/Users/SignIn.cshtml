@model SignInUserDto
<h1>Sign Up</h1>
<div style="margin:0 auto;width:50%;display:flex;justify-content:center; border-radius: 60px; box-shadow: 0 0 40px rgba(8,7,16,0.6);">
    <div>
        <form class="row g-3" style="width: 400px " asp-controller="Users" asp-action="SignIn"  method="post">
            <div>
                <div>
                    <input name="Username" class="form-control" asp-for="Username" type="text" placeholder="Username" />
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div>
                    <input name="Password" class="form-control" asp-for="Password" type="password" placeholder="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

            </div>

            <button class="form-control" type="submit">Sign In</button>

            <a style="margin-bottom:15px;" class="link-info" asp-controller="Users" asp-action="SignUp">Sign Up</a>
        </form>
    </div>
</div>